<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset label="COM_ALFA" name="alfa">


        <field name="stock_action" type="list"
               label="COM_ALFA_FORM_LBL_ITEM_STOCK_ACTION"
               description="COM_ALFA_FORM_DESC_ITEM_STOCK_ACTION"
               multiple="false"
               default="0">
            <option value="0">COM_ALFA_FORM_LBL_ITEM_STOCK_ACTION_NO_ACTION</option>
            <option value="1">COM_ALFA_FORM_LBL_ITEM_STOCK_ACTION_NOTIFY</option>
            <option value="2">COM_ALFA_FORM_LBL_ITEM_STOCK_ACTION_HIDE_OUT_OF_STOCK</option>
        </field>

        <field
            name="stock_low"
            type="number"
            label="COM_ALFA_FORM_LBL_ITEM_LOW_STOCK_VALUE"
            description="COM_ALFA_FORM_DESC_ITEM_LOW_STOCK_VALUE"
            min="1"
          />

        <field name="stock_low_message"
               label="COM_ALFA_FORM_LBL_ITEM_LOW_STOCK_MESSAGE"
               description="COM_ALFA_FORM_DESC_ITEM_LOW_STOCK_MESSAGE"
               type="editor"
               showon="stock_low!:"
        />

        <field name="stock_zero_message"
               label="COM_ALFA_FORM_LBL_ITEM_STOCK_AVAILABILITY"
               description="COM_ALFA_FORM_DESC_ITEM_STOCK_AVAILABILITY"
               type="editor"
        />

    </fieldset>

    <fieldset name="prices" label="Price Settings">

        <fieldset name="base_price" label="Base price settings" class="d-flex">
            <field
                name="base_price_show"
                type="radio"
                default="1"
                label="Base price"
                description=""
                layout="joomla.form.field.radio.switcher"
                parentClass="col-md-6"
                >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field
                name="base_price_show_label"
                type="radio"
                default="1"
                label="Base price label"
                description=""
                layout="joomla.form.field.radio.switcher"
                parentClass="col-md-6"
                showon="base_price_show:1"
                >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>

        <fieldset name="base_price_with_discounts" label="Base price with discounts settings" class="d-flex">
            <field
                    name="base_price_with_discounts_show"
                    type="radio"
                    default="1"
                    label="Base price with discounts"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field
                    name="base_price_with_discounts_show_label"
                    type="radio"
                    default="1"
                    label="Base price with discounts label"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
                    showon="base_price_with_discounts_show:1"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>

        <fieldset name="tax_amount" label="Tax amount settings" class="d-flex">
            <field
                    name="tax_amount_show"
                    type="radio"
                    default="1"
                    label="Tax amount"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field
                    name="tax_amount_show_label"
                    type="radio"
                    default="1"
                    label="Tax amount label"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
                    showon="tax_amount_show:1"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>

        <fieldset name="base_price_with_tax" label="Base price with tax settings" class="d-flex">
            <field
                    name="base_price_with_tax_show"
                    type="radio"
                    default="1"
                    label="Base price with tax show"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field
                    name="base_price_with_tax_show_label"
                    type="radio"
                    default="1"
                    label="Base price with tax show label"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
                    showon="base_price_with_tax_show:1"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>

        <fieldset name="discount_amount" label="Discount amount settings" class="d-flex">
            <field
                    name="discount_amount_show"
                    type="radio"
                    default="1"
                    label="Discount amount show"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field
                    name="discount_amount_show_label"
                    type="radio"
                    default="1"
                    label="Discount amount show label"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
                    showon="discount_amount_show:1"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>

        <fieldset name="final_price" label="Final price settings" class="d-flex">
            <field
                    name="final_price_show"
                    type="radio"
                    default="1"
                    label="Final price show"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field
                    name="final_price_show_label"
                    type="radio"
                    default="1"
                    label="Final price show label"
                    description=""
                    layout="joomla.form.field.radio.switcher"
                    parentClass="col-md-6"
                    showon="final_price_show:1"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>

    </fieldset>

    <fieldset name="currencies" label="Currency Settings">
        <field
            name="default_currency"
            type="sql"
            label="Default Currency"
            query="SELECT id, name FROM #__alfa_currencies ORDER BY name ASC" key_field="id" value_field="name"
        />
    </fieldset>
    
    <fieldset name="component">
        <field
            name="save_history"
            type="radio"
            default="0"
            label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL"
            description="JGLOBAL_SAVE_HISTORY_OPTIONS_DESC"
            layout="joomla.form.field.radio.switcher"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="history_limit" type="text" filter="integer" label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL" description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC" default="5"/>

      

        <field
          name="sef_ids"
          type="radio"
          layout="joomla.form.field.radio.switcher"
          default="0"
          label="JGLOBAL_SEF_NOIDS_LABEL"
          description="JGLOBAL_SEF_NOIDS_DESC"
          filter="integer"
          >
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
    </fieldset>

    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
        >
        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            validate="rules"
            filter="rules"
            component="com_alfa"
            section="component"
        />
    </fieldset>

</config>
