<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">

    <field name="name" size="400" filter="safehtml" type="text" required="true" translateLabel="true" label="COM_ALFA_FORM_LBL_PAYMENT_NAME" description="COM_ALFA_FORM_DESC_PAYMENT_NAME" hint="COM_ALFA_FORM_LBL_PAYMENT_NAME"/>


    <fieldset name="general">

        <field
                name="type"
                type="type"
                label="Type is:"
                default="text"
                required="true"
        />

        <field
            name="field_name"
            type="text"
            label="Field Name"
            hint="JFIELD_NAME_PLACEHOLDER"
            required="false"
        />

        <field
                name="field_label"
                type="text"
                label="Field Label"
                required="true"
        />

        <field
                name="field_description"
                type="text"
                label="Field Description"
                required="false"
        />


        <field name="required" type="radio"
               layout="joomla.form.field.radio.switcher"
               label="Required"
               description=""
               default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>


        <field name="registration" type="radio"
               layout="joomla.form.field.radio.switcher"
               label="Registration"
               description=""
               default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="billing" type="radio"
               layout="joomla.form.field.radio.switcher"
               label="Billing"
               description=""
               default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="shipping" type="radio"
               layout="joomla.form.field.radio.switcher"
               label="Shipping"
               description=""
               default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="usergroups"
                type="UserGroupList"
                label="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERGROUPS_LBL"
                description="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERGROUPS_DESC"
                layout="joomla.form.field.list-fancy-select"
                multiple="true"
                checksuperusergroup="1"
                default="8"
                header="All User Groups"
        />

        <field
                name="users" type="sql"
                input_type="list"
                required="false"
                multiple="true"
                label="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERS_LBL"
                description="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERS_DESC"
                layout="joomla.form.field.list-fancy-select"
                query="SELECT `id`, `name` FROM `#__users`" key_field="id" value_field="name"
        />

    </fieldset>



    <fieldset name="publish">
        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                class="readonly"
                readonly="true"
                filter="unset"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                class="form-control"
                translateformat="true"
                showtime="true"
                readonly="true"
                filter="user_utc"
        />

        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>

    </fieldset>

    <fieldset name="meta">
        <field name="meta_title" maxlength="255" filter="safehtml" type="text" translateLabel="true" translateDescription="true" label="COM_ALFA_FORM_LBL_ITEM_META_TITLE" description="COM_ALFA_FORM_DESC_ITEM_META_TITLE" />
        <field name="meta_desc" cols="30" rows="3" filter="safehtml" type="textarea" label="JFIELD_META_DESCRIPTION_LABEL" description="COM_ALFA_FORM_DESC_ITEM_META_DESC" />
    </fieldset>

    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>

    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>


</form>

