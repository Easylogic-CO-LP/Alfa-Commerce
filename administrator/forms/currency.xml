<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_ALFA_FORM_LBL_CURRENCY_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_ALFA_FORM_LBL_CURRENCY_MODIFIED_BY"/>
    <field name="code" filter="safehtml" type="text" label="COM_ALFA_FORM_LBL_CURRENCY_CODE" description="COM_ALFA_FORM_DESC_CURRENCY_CODE" hint="COM_ALFA_FORM_LBL_CURRENCY_CODE"/>
    <field name="name" size="400" filter="safehtml" type="text" required="true" translateLabel="true" label="COM_ALFA_FORM_LBL_CURRENCY_NAME" description="COM_ALFA_FORM_DESC_CURRENCY_NAME" hint="COM_ALFA_FORM_LBL_CURRENCY_NAME"/>
    <field name="symbol" filter="safehtml" type="text" label="COM_ALFA_FORM_LBL_CURRENCY_SYMBOL" description="COM_ALFA_FORM_DESC_CURRENCY_SYMBOL" hint="COM_ALFA_FORM_LBL_CURRENCY_SYMBOL"/>
    <field name="number" filter="safehtml" min="0" step="1" type="number" required="true" message="Currency Number Already Exists" label="COM_ALFA_FORM_LBL_CURRENCY_NUMBER" description="COM_ALFA_FORM_DESC_CURRENCY_NUMBER" hint="COM_ALFA_FORM_LBL_CURRENCY_NUMBER"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
