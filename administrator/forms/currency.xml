<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>

    <field name="code" filter="safehtml" type="text" label="COM_ALFA_FORM_LBL_CURRENCY_CODE" description="COM_ALFA_FORM_DESC_CURRENCY_CODE" hint="COM_ALFA_FORM_LBL_CURRENCY_CODE"/>
    <field name="name" size="400" filter="safehtml" type="text" required="true" translateLabel="true" label="COM_ALFA_FORM_LBL_CURRENCY_NAME" description="COM_ALFA_FORM_DESC_CURRENCY_NAME" hint="COM_ALFA_FORM_LBL_CURRENCY_NAME"/>
    <field name="symbol" filter="safehtml" type="text" label="COM_ALFA_FORM_LBL_CURRENCY_SYMBOL" description="COM_ALFA_FORM_DESC_CURRENCY_SYMBOL" hint="COM_ALFA_FORM_LBL_CURRENCY_SYMBOL"/>
    <field name="number" filter="safehtml" min="0" step="1" type="number" required="true" message="Currency Number Already Exists" label="COM_ALFA_FORM_LBL_CURRENCY_NUMBER" description="COM_ALFA_FORM_DESC_CURRENCY_NUMBER" hint="COM_ALFA_FORM_LBL_CURRENCY_NUMBER"/>

    <!-- Decimal Separator Field -->
    <field
            name="decimal_symbol"
            type="text"
            label="Decimal Separator"
            description="Specify the character for the decimal separator, e.g., . or ,."
            default=","
            size="1"
    />

    <!-- Thousand Separator Field -->
    <field
            name="thousand_separator"
            type="text"
            label="Thousand Separator"
            description="Specify the character for the thousand separator, e.g., , or ."
            default="."
            size="1"
    />

    <!-- Decimal Places Field -->
    <field
            name="decimal_place"
            type="number"
            label="Decimal Places"
            description="Enter the number of decimal places to display, e.g., 2."
            default="2"
            min="0"
            max="10"
    />

    <field
            name="format_pattern"
            type="text"
            default="{price}{symbol}"
            label="Format Pattern"
            description="Specify the format pattern using {symbol} and {number}, e.g., {symbol}{number} or {number} {symbol}."
    />


    <field
            name="state"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            default="1"
            validate="options"
    >
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>

    <field name="ordering"/>

    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>

    <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="form-control"
            translateformat="true"
            showtime="true"
            readonly="true"
            filter="user_utc"
    />

    <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            validate="UserId"
    />

    <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"
            validate="UserId"
    />

    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
