<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">

    <field name="name" size="400" filter="safehtml" type="text" required="true" translateLabel="true" label="COM_ALFA_FORM_LBL_PAYMENT_NAME" description="COM_ALFA_FORM_DESC_PAYMENT_NAME" hint="COM_ALFA_FORM_LBL_PAYMENT_NAME"/>

  <fieldset name="general">

    <field
            name="type"
            type="shipmentType"
            label="Type is"
            default="standard"
            required="true"
    />

    <field
            name="color"
            type="color"
            default="rgba(0, 0, 0, 1)"
            format="rgba"
            label="COM_ALFA_COLOR_LABEL"/>

    <field
            name="bg_color"
            type="color"
            default="rgba(214, 214, 214, 1)"
            format="rgba"
            label="COM_ALFA_BACKGROUND_COLOR_LABEL" />

    <!-- TODO: currency -->

    <field
            name="description"
            input_type="textarea"
            required="false"
            hint="Payment's description"
            label="Description"
    />

    <field
            name="show_on_product"
            input_type="radio"
            layout="joomla.form.field.radio.switcher"
            required="false"
            default="1"
            label="COM_ALFA_PAYMENTS_FORM_LBL_SHOW_ON_PRODUCT">
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>

    <field name="categories" type="categories" showPath="true" multiple="true" default="0" layout="joomla.form.field.list-fancy-select" label="Categories" description="" header="COM_ALFA_FORM_CATEGORY_ALL"/>

    <field
            name="manufacturers" type="sql"
            input_type="list"
            required="false"
            multiple="true"
            default="0"
            label="COM_ALFA_FORM_LBL_MANUFACTURERS"
            description="COM_ALFA_FORM_DESC_MANUFACTURERS"
            layout="joomla.form.field.list-fancy-select"
            query="SELECT `id`, `name` AS val FROM `#__alfa_manufacturers`" key_field="id" value_field="val"
            header="All manufacturers"
    />

    <field name="places"
           type="categories"
           model="places"
           multiple="true"
           showPath="false"
           orderBy="id"
           orderDir="desc"
           disableDescendants="true"
           default="0"
           header="COM_ALFA_FORM_PLACE_ALL"
           layout="joomla.form.field.list-fancy-select"
           label="COM_ALFA_FORM_CATEGORY_PLACE_LBL">
      <!--      <option value="0">COM_ALFA_FROM_PLACE_NO_OPTION</option>-->
    </field>

    <field
            name="usergroups"
            type="UserGroupList"
            label="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERGROUPS_LBL"
            description="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERGROUPS_DESC"
            layout="joomla.form.field.list-fancy-select"
            multiple="true"
            checksuperusergroup="1"
            default="8"
            header="All User Groups"
    />

    <field
            name="users" type="sql"
            input_type="list"
            required="false"
            multiple="true"
            label="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERS_LBL"
            description="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERS_DESC"
            layout="joomla.form.field.list-fancy-select"
            query="SELECT `id`, `name` FROM `#__users`" key_field="id" value_field="name"
    />

  </fieldset>

  <fieldset name="publish">

        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            validate="UserId"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"
            validate="UserId"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="form-control"
            translateformat="true"
            showtime="true"
            readonly="true"
            filter="user_utc"
        />

        <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>

        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>

  </fieldset>

    <field name="ordering"/>

    <field name="checked_out" type="hidden" filter="unset"/>

    <field name="checked_out_time" type="hidden" filter="unset"/>

</form>
