<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_ALFA_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_ALFA_FILTER_STATE"
               description="COM_ALFA_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>



    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_ALFA_LIST_FULL_ORDERING"
               description="COM_ALFA_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_ALFA_ID_ASC</option>
            <option value="a.id DESC">COM_ALFA_ID_DESC</option>
            <option value="a.name ASC">COM_ALFA_NAME_ASC</option>
            <option value="a.name DESC">COM_ALFA_NAME_DESC</option>
            <option value="a.color ASC">COM_ALFA_COLOR_ASC</option>
            <option value="a.color DESC">COM_ALFA_COLOR_DESC</option>
            <option value="a.bg_color ASC">COM_ALFA_BACKGROUND_COLOR_ASC</option>
            <option value="a.bg_color DESC">COM_ALFA_BACKGROUND_COLOR_DESC</option>
            <option value="a.stock_action ASC">COM_ALFA_STOCK_ACTION_ASC</option>
            <option value="a.stock_action DESC">COM_ALFA_STOCK_ACTION_DESC</option>

        </field>

        <field name="limit"
               type="limitbox"
               label="COM_ALFA_LIST_LIMIT"
               description="COM_ALFA_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>