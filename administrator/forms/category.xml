<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">

    <fieldset>

        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="parent_id"
               type="categories"
               model="categories"
               showPath="false"
               orderBy="id"
               orderDir="desc"
               disableDescendants="true"
               layout="joomla.form.field.list-fancy-select" label="COM_ALFA_FORM_LBL_CATEGORY_PARENT_ID">
            <option value="0">COM_ALFA_FROM_CATEGORY_NO_OPTION</option>
        </field>

        <field name="name" maxlength="400" filter="safehtml" type="text" required="true" translateLabel="true"
               translateDescription="true" label="COM_ALFA_FORM_LBL_CATEGORY_NAME"
               description="COM_ALFA_FORM_DESC_CATEGORY_NAME" hint="COM_ALFA_FORM_LBL_CATEGORY_NAME"/>


        <field name="desc" type="editor" label="COM_ALFA_FORM_LBL_CATEGORY_DESC"
               description="COM_ALFA_FORM_CATEGORY_DESC"/>

        <field name="alias" type="text" class="inputbox" generator="name" label="JFIELD_ALIAS_LABEL"
               description="COM_ALFA_FORM_DESC_CATEGORY_ALIAS" hint="COM_ALFA_FORM_LBL_CATEGORY_ALIAS"/>

        <field name="meta_title" maxlength="255" filter="safehtml" type="text" translateLabel="true"
               translateDescription="true" label="COM_ALFA_FORM_LBL_CATEGORY_META_TITLE"
               description="COM_ALFA_FORM_DESC_CATEGORY_META_TITLE" hint="COM_ALFA_FORM_LBL_CATEGORY_META_TITLE"/>

        <field name="meta_desc" cols="30" rows="3" filter="safehtml" type="textarea"
               label="JFIELD_META_DESCRIPTION_LABEL" description="COM_ALFA_FORM_DESC_CATEGORY_META_DESC"
               hint="COM_ALFA_FORM_LBL_CATEGORY_META_DESC"/>

        <field
                name="state"
                type="list"
                label="JSTATUS"
                class="form-select-color-state"
                default="1"
                validate="options"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="publish_up" type="calendar" showtime="true" format="%Y-%m-%d %H:%M" filter="USER_UTC"
               label="COM_ALFA_FORM_CATEGORY_LBL_PUBLISH_UP" description="COM_ALFA_CATEGORY_PUBLISH_UP_DESC"/>

        <field name="publish_down" type="calendar" showtime="true" format="%Y-%m-%d %H:%M" filter="USER_UTC"
               label="COM_ALFA_FORM_CATEGORY_LBL_PUBLISH_DOWN" description="COM_ALFA_CATEGORY_PUBLISH_DOWN_DESC"/>

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />


        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                class="form-control"
                translateformat="true"
                showtime="true"
                readonly="true"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                class="readonly"
                readonly="true"
                filter="unset"
                validate="UserId"
        />

        <field
                name="allowedUsers" type="sql"
                input_type="list"
                required="false"
                multiple="true"
                label="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERS_LBL"
                description="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERS_DESC"
                layout="joomla.form.field.list-fancy-select"
                query="SELECT `id`, `name` FROM `#__users`" key_field="id" value_field="name"
        />

        <field
                name="allowedUserGroups"
                type="UserGroupList"
                label="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERGROUPS_LBL"
                description="COM_ALFA_FORM_CATEGORY_ALLOWEDUSERGROUPS_DESC"
                layout="joomla.form.field.list-fancy-select"
                multiple="true"
                checksuperusergroup="1"
                default="8"
        />

        <field
                name="ordering"
                type="text"
                label="JFIELD_ORDERING_LABEL"
                default="0"
        />


        <!--    <field-->
        <!--            name="modified_by"-->
        <!--            type="user"-->
        <!--            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"-->
        <!--            class="readonly"-->
        <!--            readonly="true"-->
        <!--            filter="unset"-->
        <!--            validate="UserId"-->
        <!--    />-->


        <!--    <field-->
        <!--            name="created_by"-->
        <!--            type="user"-->
        <!--            label="COM_CONTENT_FIELD_CREATED_BY_LABEL"-->
        <!--            validate="UserId"-->
        <!--    />-->


        <field
                name="version_note"
                type="text"
                label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
                maxlength="255"
        />


        <fieldset name="prices" label="Price Settings">


            <fieldset name="base_price" label="Base price settings" class="d-flex">
                <field
                        name="base_price_show"
                        type="radio"
                        default="-1"
                        label="Base price"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="base_price_show_label"
                        type="radio"
                        default="-1"
                        label="Base price label"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

            <fieldset name="base_price_with_discounts" label="Base price with discounts settings" class="d-flex">
                <field
                        name="base_price_with_discounts_show"
                        type="radio"
                        default="-1"
                        label="Base price with discounts"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="base_price_with_discounts_show_label"
                        type="radio"
                        default="-1"
                        label="Base price with discounts label"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

            <fieldset name="tax_amount" label="Tax amount settings" class="d-flex">
                <field
                        name="tax_amount_show"
                        type="radio"
                        default="-1"
                        label="Tax amount"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="tax_amount_show_label"
                        type="radio"
                        default="-1"
                        label="Tax amount label"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

            <fieldset name="base_price_with_tax" label="Base price with tax settings" class="d-flex">
                <field
                        name="base_price_with_tax_show"
                        type="radio"
                        default="-1"
                        label="Base price with tax show"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="base_price_with_tax_show_label"
                        type="radio"
                        default="-1"
                        label="Base price with tax show label"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

            <fieldset name="discount_amount" label="Discount amount settings" class="d-flex">
                <field
                        name="discount_amount_show"
                        type="radio"
                        default="-1"
                        label="Discount amount show"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="discount_amount_show_label"
                        type="radio"
                        default="-1"
                        label="Discount amount show label"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

            <fieldset name="final_price" label="Final price settings" class="d-flex">
                <field
                        name="final_price_show"
                        type="radio"
                        default="-1"
                        label="Final price show"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="final_price_show_label"
                        type="radio"
                        default="-1"
                        label="Final price show label"
                        class="btn-group"
                >
                    <option value="-1">General</option>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

        </fieldset>

    </fieldset>

</form>
