<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">
  <fieldset>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_ALFA_FORM_LBL_USERGROUP_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_ALFA_FORM_LBL_USERGROUP_MODIFIED_BY"/>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="prices_display" type="checkboxes" label="COM_ALFA_FORM_LBL_USERGROUP_PRICES_DISPLAY" description="COM_ALFA_FORM_DESC_USERGROUP_PRICES_DISPLAY" hint="COM_ALFA_FORM_LBL_USERGROUP_PRICES_DISPLAY" showon="prices_enable:1">
      <option value="price">COM_ALFA_USERGROUPS_PRICES_DISPLAY_OPTION_PRICE</option>
      <option value="tax_price">COM_ALFA_USERGROUPS_PRICES_DISPLAY_OPTION_TAX_PRICE</option>
      <option value="tax">COM_ALFA_USERGROUPS_PRICES_DISPLAY_OPTION_TAX</option>
      <option value="discount_price">COM_ALFA_USERGROUPS_PRICES_DISPLAY_OPTION_DISCOUNT_PRICE</option>
      <option value="discount">COM_ALFA_USERGROUPS_PRICES_DISPLAY_OPTION_DISCOUNT</option>
    </field>
    <field name="name" size="400" filter="safehtml" type="text" required="true" translateLabel="true" label="COM_ALFA_FORM_LBL_USERGROUP_NAME" description="COM_ALFA_FORM_DESC_USERGROUP_NAME" hint="COM_ALFA_FORM_LBL_USERGROUP_NAME"/>
    <field name="prices_enable" type="checkbox" checked="0" label="COM_ALFA_FORM_LBL_USERGROUP_PRICES_ENABLE" description="COM_ALFA_FORM_DESC_USERGROUP_PRICES_ENABLE" hint="COM_ALFA_FORM_LBL_USERGROUP_PRICES_ENABLE"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
