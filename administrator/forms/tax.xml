<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Alfa\Component\Alfa\Administrator\Field">
  <fieldset>

    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>

      <field
              name="id"
              type="text"
              readonly="true"
              class="readonly"
              default="0"
              description="JGLOBAL_FIELD_ID_DESC"
      />

      <field
              name="name"
              maxlength="400"
              filter="safehtml"
              type="text"
              required="true"
              translateLabel="true"
              translateDescription="true"
              label="COM_ALFA_FORM_LBL_TAX_NAME"
              description="COM_ALFA_FORM_DESC_TAX_NAME"
              hint="COM_ALFA_FORM_LBL_TAX_NAME"
    />

     <field
              name="desc"
              type="editor"
              label="COM_ALFA_FORM_LBL_TAX_DESC"
              description="COM_ALFA_FORM_TAX_DESC"
     />

      <field
              name="value"
              type="number"
              step="0.01"
              label="COM_ALFA_FORM_LBL_TAX_VALUE"
              required="true"
              description="COM_ALFA_FORM_DESC_TAX_VALUE"
      />

      <field
              name="state"
              type="list"
              label="JSTATUS"
              class="form-select-color-state"
              default="1"
              validate="options"
      >
          <option value="1">JPUBLISHED</option>
          <option value="0">JUNPUBLISHED</option>
          <option value="2">JARCHIVED</option>
          <option value="-2">JTRASHED</option>
      </field>

      <field
              name="checked_out"
              type="hidden"
              filter="unset"
      />

      <field
              name="checked_out_time"
              type="hidden"
              filter="unset"
      />

      <field
              name="created_by"
              type="user"
              label="JGLOBAL_FIELD_CREATED_BY_LABEL"
              validate="UserId"
      />

      <field
              name="modified"
              type="calendar"
              label="JGLOBAL_FIELD_MODIFIED_LABEL"
              class="form-control"
              translateformat="true"
              showtime="true"
              readonly="true"
              filter="user_utc"
      />

      <field
              name="modified_by"
              type="user"
              label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
              class="readonly"
              readonly="true"
              filter="unset"
              validate="UserId"
      />

      <field
              name="ordering"
              type="hidden"
      />

      <field
              name="tax_rules"
              type="subform"
              label="COM_ALFA_FORM_FIELDSET_TAX_RULES"
              description="COM_ALFA_FORM_FIELDSET_TAX_DESC"
              multiple="true"
              min="1"
      >
         <form>
              
             <field
                     name="place_id"
                     type="sql"
                     required="false"
                     multiple="false"
                     default="0"
                     label="COM_ALFA_FORM_TAXRULES_PLACE_LBL"
                     layout="joomla.form.field.list-fancy-select"
                     query="SELECT `id`, `name` AS val FROM `#__alfa_places`" key_field="id" value_field="val"
                     header="COM_ALFA_FORM_PLACE_NO_OPTION"
             />

             <field
                     name="category_id"
                     type="categories"
                     showPath="true"
                     multiple="false"
                     layout="joomla.form.field.list-fancy-select"
                     label="COM_ALFA_FORM_TAXRULES_CATEGORY_LBL"
                     description="description"
                     header="COM_ALFA_FORM_CATEGORY_NO_OPTION"/>

             <field
                     name="id"
                     type="text"
                     readonly="true"
                     class="readonly"
                     default="0"
                     description="JGLOBAL_FIELD_ID_DESC"
             />

         </form>
      </field>
  </fieldset>
</form>
