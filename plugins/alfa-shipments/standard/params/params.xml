<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="shipmentsparams">
        <fieldset name="shipmentsparams">

            <field
                    name="cost-per-place"
                    type="subform"
                    buttons="add,remove,move"
                    hiddenLabel="true"
                    label="All"
                    description=""
                    multiple="true"
            >

                <form>

                    <field name="places"
                           type="categories"
                           model="places"
                           multiple="true"
                           showPath="false"
                           orderBy="id"
                           orderDir="desc"
                           disableDescendants="true"
                           default="0"
                           header="COM_ALFA_FORM_PLACE_ALL"
                           layout="joomla.form.field.list-fancy-select"
                           label="COM_ALFA_FORM_CATEGORY_PLACE_LBL">
                      <!--      <option value="0">COM_ALFA_FROM_PLACE_NO_OPTION</option>-->
                    </field>


                    <field
                            name="costs"
                            type="subform"
                            buttons="add,remove,move"
                            class="shrinked-repeatable-table"
                            hiddenLabel="true"
                            label="All"
                            description=""
                            multiple="true"
                            layout="joomla.form.field.subform.repeatable-table"
                    >

                        <form>
                            <field
                                    name="zip-start"
                                    type="text"
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_ZIP_START"
                            />

                            <field
                                    name="zip-end"
                                    type="text"
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_ZIP_END"
                            />

                            <field
                                    name="weight-max"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_WEIGHT_MAX"
                            />

                            <field
                                    name="width-max"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_WIDTH_MAX"
                            />

                            <field
                                    name="height-max"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_HEIGHT_MAX"
                            />

                            <field
                                    name="depth-max"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_DEPTH_MAX"
                            />


                            <field
                                    name="amount-start"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_AMOUNT_START"
                            />

                            <field
                                    name="amount-end"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_AMOUNT_END"
                            />


                            <field
                                    name="cost"
                                    type="number"
                                    min='0.01'
                                    default="0"
                                    readonly="false"
                                    label="COM_ALFA_FORM_SHIPMENT_COST"
                            />

                        </form>

                    </field>

                </form>

            </field>
        </fieldset>
    </fields>
</form>